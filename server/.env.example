# Database (e.g. Hostinger MySQL or local)
DATABASE_HOST=localhost
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_db_name

# JWT for auth (use a long random string in production)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (used for invite links in emails / copy-paste)
FRONTEND_ORIGIN=http://localhost:5173

# Server port (optional, default 4000)
PORT=4000

# Optional: invite email sending (leave blank to disable).
# If set, "Send invite by email" in Settings will send the invite link to the recipient.
# MAIL_FROM can be "noreply@yourdomain.com" or "Cimerat <noreply@yourdomain.com>" for a display name.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM=noreply@yourdomain.com
